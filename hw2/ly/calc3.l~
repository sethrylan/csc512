%{
#include <stdlib.h>
#include "calc3.h"
#include "y.tab.h"
void yyerror(char *);
%}

%%

[a-z]		{ 
		yylval.str_ptr = strdup(yytext);
		return IDENTIFIER;
		}

[0-9]+		{
		yylval.long_val = atol(yytext);
		return INTEGER;
		}

[-()<>=+*/;{}.]	{
		return *yytext;
		}

">="            return GE;
"<="            return LE;
"=="            return EQ;
"!="            return NEQ;
"while"         return WHILE;
"if"            return IF;
"else"          return ELSE;
"print"         return PRINT;
"fact"          return FACT;
"gcd"           return GCD;
"lntwo"         return LNTWO;

[ \t\n]+        ;       /* ignore whitespace */

.               yyerror("Unknown character");
%%
int yywrap(void) {
    return 1;
}
